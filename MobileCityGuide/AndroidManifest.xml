<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.hft"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
         <uses-library android:name="com.google.android.maps" />
        <activity
            android:label="@string/app_name"
            android:name=".activity.MobileCityGuideActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".map.Map"
            android:theme="@android:style/Theme.NoTitleBar" 
            android:configChanges="orientation|keyboardHidden">
        </activity>        
        <activity
            android:label="@string/app_name"
            android:name=".activity.ManualTripActivity" >
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".activity.ManualTripPoiActivity" >
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".activity.MainMenuActivity" >
        </activity>
        
        <activity
            android:label="@string/app_name"
            android:name=".activity.Route" >
        </activity>
        <activity 
            android:label="@string/app_name"
            android:name=".activity.TourInformation">
        </activity>  
        <activity 
            android:label="@string/app_name"
            android:name=".activity.Web" >
        </activity>  
        <activity 
            android:label="@string/app_name"
            android:name=".activity.Web_poi_on_map" >
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".activity.KnowYourCityActivity" >
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".activity.KnowYourCityPoiActivity" >
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".activity.ImageUploadActivity" >
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".activity.ReviewPageActivity" >
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".activity.ReviewActivity" >
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".activity.SearchableActivity" />
        </activity>
        <activity
            android:launchMode="singleTop"
            android:name=".activity.SearchableActivity" >
            <intent-filter >
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
    </application>

</manifest>